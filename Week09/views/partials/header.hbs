<div class="d-flex flex-row align-items-center p-3 border rounded" id="header-ctn">
    <h2 style="cursor:pointer">
        Home
    </h2>
    {{#if user}}
    <span class="ms-auto me-3">Welcome, <b>{{user.Username}}</b></span>
    <a href="/user/logout">
        <button class="btn btn-danger">Log out</button>
    </a>
    {{else}}
    <a class="ms-auto" href="/user/login">
        <button class="btn btn-primary">Log in</button>
    </a>
    {{/if}}
</div>